    "immer": "^10.1.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.8.1",
    "socket.io-client": "^4.7.4",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4",
